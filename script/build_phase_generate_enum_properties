#!/bin/bash

if ! which sourcery > /dev/null; then
    HOMEBREW_NO_AUTO_UPDATE=1 \
    brew install sourcery
fi

sourcery \
    --sources Rythmico/RequestLessonPlan/LessonPlanRequestFlow/RequestLessonPlanContext.swift \
    --sources Rythmico/RequestLessonPlan/StudentDetails/StudentDetailsView.swift \
    --sources Rythmico/RequestLessonPlan/Scheduling/SchedulingView.swift \
    --sources Rythmico/RequestLessonPlan/PrivateNote/PrivateNoteView.swift \
    --templates Rythmico/Supporting\ Files/EnumProperties.stencil \
    --output Rythmico/Supporting\ Files
